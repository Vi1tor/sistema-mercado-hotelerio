# Configurações do Banco de Dados
MONGODB_URI=mongodb://localhost:27017/hotel-market-analysis

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# APIs Externas (configure suas chaves)
BOOKING_API_KEY=your_booking_api_key_here
EXPEDIA_API_KEY=your_expedia_api_key_here

# Configurações de Scraping
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_HOURS=6

# Configurações de Email (para alertas)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Configurações de Análise
ANALYSIS_UPDATE_INTERVAL_HOURS=24
PRICE_ALERT_THRESHOLD_PERCENT=15
